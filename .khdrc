# reload config
cmd + alt + ctrl - r : /usr/local/bin/khd -e "reload"
cmd + alt + ctrl - q : brew services restart crisidev/chunkwm/chunkwm

# open terminal, blazingly fast compared to iTerm/Hyper
cmd - return : open -na /Applications/iTerm.app

# focus window
cmd + shift - left : /usr/local/bin/chunkc tiling::window --focus west
cmd + shift - down : /usr/local/bin/chunkc tiling::window --focus south
cmd + shift - up : /usr/local/bin/chunkc tiling::window --focus north
cmd + shift - right : /usr/local/bin/chunkc tiling::window --focus east

# equalize size of windows
#shift + alt - 0 : /usr/local/bin/chunkc tiling::desktop --equalize

# swap window
lctrl + shift - left : /usr/local/bin/chunkc tiling::window --swap west
lctrl + shift - down : /usr/local/bin/chunkc tiling::window --swap south
lctrl + shift - up : /usr/local/bin/chunkc tiling::window --swap north
lctrl + shift - right : /usr/local/bin/chunkc tiling::window --swap east

# move window
lctrl + alt - left : /usr/local/bin/chunkc tiling::window --warp west
lctrl + alt - down : /usr/local/bin/chunkc tiling::window --warp south
lctrl + alt - up : /usr/local/bin/chunkc tiling::window --warp north
lctrl + alt - right : /usr/local/bin/chunkc tiling::window --warp east

# move floating windows / windows on a floating space
#shift + alt - up     : /usr/local/bin/chunkc tiling::window --warp-floating fullscreen
#shift + alt - left   : /usr/local/bin/chunkc tiling::window --warp-floating left
#shift + alt - right  : /usr/local/bin/chunkc tiling::window --warp-floating right
#shift + cmd - left   : /usr/local/bin/chunkc tiling::window --warp-floating top-left
#shift + cmd - right  : /usr/local/bin/chunkc tiling::window --warp-floating top-right
#shift + ctrl - left  : /usr/local/bin/chunkc tiling::window --warp-floating bottom-left
#shift + ctrl - right : /usr/local/bin/chunkc tiling::window --warp-floating bottom-right

# send window to desktop
#shift + alt - x : /usr/local/bin/chunkc tiling::window --send-to-desktop $(/usr/local/bin/chunkc query _last_active_desktop)
#shift + alt - left : /usr/local/bin/chunkc tiling::window --send-to-desktop prev
#shift + alt - right : /usr/local/bin/chunkc tiling::window --send-to-desktop next
#shift + alt - 1 : /usr/local/bin/chunkc tiling::window --send-to-desktop 1
#shift + alt - 2 : /usr/local/bin/chunkc tiling::window --send-to-desktop 2
#shift + alt - 3 : /usr/local/bin/chunkc tiling::window --send-to-desktop 3
#shift + alt - 4 : /usr/local/bin/chunkc tiling::window --send-to-desktop 4
#shift + alt - 5 : /usr/local/bin/chunkc tiling::window --send-to-desktop 5
#shift + alt - 6 : /usr/local/bin/chunkc tiling::window --send-to-desktop 6

# send window to desktop and switch desktop
#shift + cmd - x : `id=$(/usr/local/bin/chunkc query _last_active_desktop); /usr/local/bin/chunkc tiling::window -d $id; /usr/local/bin/khd -p "cmd + alt - $id" &> /dev/null`
lctrl + cmd + alt - left : /usr/local/bin/chunkc tiling::window -d prev; /usr/local/bin/khd -p "ctrl - left"
lctrl + cmd + alt - right : /usr/local/bin/chunkc tiling::window -d next; /usr/local/bin/khd -p "ctrl - right"
lctrl + cmd + alt - 1 : /usr/local/bin/chunkc tiling::window -d 1; /usr/local/bin/khd -p "cmd + alt - 1"
lctrl + cmd + alt - 2 : /usr/local/bin/chunkc tiling::window -d 2; /usr/local/bin/khd -p "cmd + alt - 2"
lctrl + cmd + alt - 3 : /usr/local/bin/chunkc tiling::window -d 3; /usr/local/bin/khd -p "cmd + alt - 3"
lctrl + cmd + alt - 4 : /usr/local/bin/chunkc tiling::window -d 4; /usr/local/bin/khd -p "cmd + alt - 4"
lctrl + cmd + alt - 5 : /usr/local/bin/chunkc tiling::window -d 5; /usr/local/bin/khd -p "cmd + alt - 5"
lctrl + cmd + alt - 6 : /usr/local/bin/chunkc tiling::window -d 6; /usr/local/bin/khd -p "cmd + alt - 6"

# switch to last active desktop
# cmd + alt - x   : `id=$(/usr/local/bin/chunkc query _last_active_desktop); /usr/local/bin/khd -p "cmd + alt - $id" &> /dev/null`

# focus monitor
#ctrl + alt - left  : /usr/local/bin/chunkc tiling::monitor -f prev
#ctrl + alt - right  : /usr/local/bin/chunkc tiling::monitor -f next
cmd + alt - 1  : /usr/local/bin/chunkc tiling::monitor -f 1
cmd + alt - 2  : /usr/local/bin/chunkc tiling::monitor -f 2
cmd + alt - 3  : /usr/local/bin/chunkc tiling::monitor -f 3

# send window to monitor and follow focus
#ctrl + cmd - z  : /usr/local/bin/chunkc tiling::window --send-to-monitor prev; /usr/local/bin/chunkc monitor -f prev
#ctrl + cmd - c  : /usr/local/bin/chunkc tiling::window --send-to-monitor next; /usr/local/bin/chunkc monitor -f next
ctrl + cmd - 1  : /usr/local/bin/chunkc tiling::window --send-to-monitor 1; /usr/local/bin/chunkc monitor -f 1
ctrl + cmd - 2  : /usr/local/bin/chunkc tiling::window --send-to-monitor 2; /usr/local/bin/chunkc monitor -f 2
ctrl + cmd - 3  : /usr/local/bin/chunkc tiling::window --send-to-monitor 3; /usr/local/bin/chunkc monitor -f 3

# increase region size
lctrl + cmd - left : /usr/local/bin/chunkc tiling::window --use-temporary-ratio 0.05 --adjust-window-edge west; /usr/local/bin/chunkc tiling::window --use-temporary-ratio -0.05 --adjust-window-edge east
lctrl + cmd - down : /usr/local/bin/chunkc tiling::window --use-temporary-ratio 0.05 --adjust-window-edge south; /usr/local/bin/chunkc tiling::window --use-temporary-ratio -0.05 --adjust-window-edge north
lctrl + cmd - up : /usr/local/bin/chunkc tiling::window --use-temporary-ratio 0.05 --adjust-window-edge north; /usr/local/bin/chunkc tiling::window --use-temporary-ratio -0.05 --adjust-window-edge south
lctrl + cmd - right : /usr/local/bin/chunkc tiling::window --use-temporary-ratio 0.05 --adjust-window-edge east; /usr/local/bin/chunkc tiling::window --use-temporary-ratio -0.05 --adjust-window-edge west

# decrease region size
#shift + cmd - a : /usr/local/bin/chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge west
#shift + cmd - s : /usr/local/bin/chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge south
#shift + cmd - w : /usr/local/bin/chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge north
#shift + cmd - d : /usr/local/bin/chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge east

# set insertion point
#ctrl + alt - f : /usr/local/bin/chunkc tiling::window --use-insertion-point focus
#ctrl + alt - h : /usr/local/bin/chunkc tiling::window --use-insertion-point west
#ctrl + alt - j : /usr/local/bin/chunkc tiling::window --use-insertion-point south
#ctrl + alt - k : /usr/local/bin/chunkc tiling::window --use-insertion-point north
#ctrl + alt - l : /usr/local/bin/chunkc tiling::window --use-insertion-point east

# rotate tree
cmd + alt - r : /usr/local/bin/chunkc tiling::desktop --rotate 90

# mirror tree y-axis
#cmd + alt - y : /usr/local/bin/chunkc tiling::desktop --mirror vertical

# mirror tree x-axis
#cmd + alt - x : /usr/local/bin/chunkc tiling::desktop --mirror horizontal

# toggle desktop offset
# cmd + alt - a : /usr/local/bin/chunkc tiling::desktop --toggle offset

# toggle window fullscreen
cmd + alt - f : /usr/local/bin/chunkc tiling::window --toggle fullscreen

# toggle window native fullscreen
# cmd + shift + alt - f : /usr/local/bin/chunkc tiling::window --toggle native-fullscreen

# toggle window parent zoom
#alt - d : /usr/local/bin/chunkc tiling::window --toggle parent

# toggle window split type
#alt - e : /usr/local/bin/chunkc tiling::window --toggle split

# float / unfloat window
cmd + alt - t : /usr/local/bin/chunkc tiling::window --toggle float

# float next window to be tiled
# shift + alt - t : /usr/local/bin/chunkc config window_float_next 1

# change layout of desktop
#ctrl + alt - a : /usr/local/bin/chunkc tiling::desktop --layout bsp
#ctrl + alt - s : /usr/local/bin/chunkc tiling::desktop --layout monocle
#ctrl + alt - d : /usr/local/bin/chunkc tiling::desktop --layout float

#ctrl + alt - w : /usr/local/bin/chunkc tiling::desktop --deserialize ~/.chunkwm_layouts/dev_1

